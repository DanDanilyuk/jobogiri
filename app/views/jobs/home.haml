#index-banner.parallax-container
  .section.no-pad-bot
    .container
      %br/
      %br/
      %h1.header.center.teal-text.text-lighten-2 Get a job Ya Hippy!
      .row.center
        %h5.header.col.s12.light A tool used to find, filter, track, and get a programming job.
      .row.center
        != link_to "Get Started", new_user_registration_path, class: "btn-large waves-effect waves-light teal lighten-1", id: "download-button"
      %br/
      %br/
