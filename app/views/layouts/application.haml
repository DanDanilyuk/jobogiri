%head
  %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %title Jobogiri
  = csrf_meta_tags
  %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
  = stylesheet_link_tag    'application', media: 'screen,projection', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
%body
  %nav.white{:role => "navigation"}
    .nav-wrapper.container
      = link_to 'JoboGiri', root_path, class: 'brand-logo', id: 'logo-container'
      %ul.right.hide-on-med-and-down
        %li= link_to 'Jobs', jobs_path
        %li= link_to 'Search', search_path
        %li= link_to 'My Jobs', user_jobs_path
        - if current_user
          %li= link_to 'Logout', destroy_user_session_path
        - else
          %li= link_to 'Login', new_user_session_path
      %ul#nav-mobile.side-nav
        %li= link_to 'Jobs', jobs_path
        %li= link_to 'Search', search_path
        %li= link_to 'My Jobs', user_jobs_path
        - if current_user
          %li= link_to 'Logout', destroy_user_session_path
        - else
          %li= link_to 'Login', new_user_session_path
      %a.button-collapse{"data-activates" => "nav-mobile", :href => "#"}
        %i.material-icons menu
  .main-content.container
    - flash.each do |key, value|
      .center.alert.alert-info.alert-dismissible.fade.show{:role => "alert"}
        -# %li{:class => (key)} test
        = value
    = yield
%footer.page-footer.teal
  .footer-copyright
    .container.center
      Made by
      %a.brown-text.text-lighten-3{:href => "http://www.dandanilyuk.com"} Dan Danilyuk
