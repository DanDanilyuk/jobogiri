= form_with(model: @user_job, local: true) do |form|
  - if @user_job.errors.any?
    #error_explanation
      %h2
        = pluralize(user_job.errors.count, "error")
        prohibited this user_job from being saved:
      %ul
        - user_job.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :comments
    = form.text_field :comments
  .field
    = form.label :state
    = form.select :state, [:added, :applied, :responded, :accepted, :denied]
  .actions
    = form.submit
